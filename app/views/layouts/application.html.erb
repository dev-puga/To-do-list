  </head>

  <body class="container">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <% if user_signed_in? %>
      <nav class="nav justify-content-end">
        <a class="nav-link" href="<%= destroy_user_session_path %>" data-method="delete">Logout</a>
      </nav>

      <p>
        Usu√°rio: <b><%= current_user.email %></b>
      </p>
    <% end %>

    <%= yield %>
  </body>
</html>
